<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/background_Card3"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbRoutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/background_button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvRoutineTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="protector Solar" />

            <TextView
                android:id="@+id/tvRoutineDescription"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="utlizar protector Solar todos los dias" />


        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>